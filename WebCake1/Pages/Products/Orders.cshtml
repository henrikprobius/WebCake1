@page "/products/orders"
@model WebCake1.Pages.OrdersModel
@{
    ViewData["Title"] = "Orders";
}
<h1>Orders</h1>
<hr />

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Type</th>
                <th>Title</th>
                <th>Size</th>
                <th>Quantity</th>
                <th>Total cost</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Orders)                                        
            {
     
                <tr>
                   
                    <td>@item.CakeType</td>
                    <td>@item.Title</td>
                    <td>@item.Size</td>
                    <td>@item.Quantity</td>
                    <td>@item.GetOrderValue()</td>
                                                     
                </tr>
            }
        </tbody>


    </table>





